{
  "name": "lifewize-portals",
  "version": "1.0.0",
  "description": "Unified monorepo for LIFEWiZE agent portals",
  "private": true,
  "workspaces": [
    "resource-center",
    "ai-sales-call-trainer",
    "landing"
  ],
  "scripts": {
    "dev:resource-center": "npm run dev --workspace=resource-center",
    "dev:ai-trainer": "npm run dev --workspace=ai-sales-call-trainer",
    "dev:landing": "npm run dev --workspace=landing",
    "build:resource-center": "npm run build --workspace=resource-center",
    "build:ai-trainer": "npm run build --workspace=ai-sales-call-trainer",
    "build:landing": "npm run build --workspace=landing",
    "build:all": "npm run build --workspaces",
    "lint": "npm run lint --workspaces",
    "clean": "rm -rf **/node_modules **/.next **/dist **/.turbo"
  },
  "keywords": [
    "lifewize",
    "portals",
    "monorepo",
    "nextjs"
  ],
  "author": "LIFEWiZE",
  "license": "PROPRIETARY"
}
